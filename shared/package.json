{
  "name": "tasit-shared",
  "version": "0.0.1",
  "description": "Components needed for a mobile Ethereum dapp",
  "scripts": {
    "test": "npx jest --maxWorkers=2",
    "pretest": "npm run lint",
    "test:update": "npx jest -u --maxWorkers=2",
    "lint": "npx prettier --write '{*.js,**/*.js,*.jsx,**/*.jsx}' && npx eslint '{*.js,**/*.js,*.jsx,**/*.jsx,**/*.snap}' --fix --ignore-pattern '/native-base-theme/*'"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasitlabs/tasit.git"
  },
  "keywords": [
    "react",
    "native",
    "ethereum",
    "dapp",
    "mobile",
    "react",
    "native"
  ],
  "author": "Tasit Labs",
  "license": "MIT",
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "jest-prop-type-error"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|.*react-navigation|native-base.*|.*expo.*)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^10.0.1",
    "expo": "^32.0.0",
    "intl": "^1.2.5",
    "native-base": "^2.12.1",
    "prop-types": "^15.6.2",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-native-button": "^2.3.0",
    "react-native-progress": "^3.6.0",
    "react-native-responsive-dimensions": "^2.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-expo": "^5.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.5.0",
    "expo-cli": "^2.17.1",
    "jest": "^24.1.0",
    "jest-expo": "^32.0.0",
    "jest-prop-type-error": "^1.1.0",
    "prettier": "^1.15.2",
    "react-dom": "^16.6.3"
  },
  "bugs": {
    "url": "https://github.com/tasitlabs/tasit/issues"
  },
  "homepage": "https://github.com/tasitlabs/tasit#readme"
}
